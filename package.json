{
  "name": "@acisel-fr/tweets-sample",
  "version": "0.1.0",
  "description": "Pull 1 over 100 tweets in real time",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acisel-fr/tweets-sample.git"
  },
  "bugs": {
    "url": "https://github.com/acisel-fr/tweets-sample/issues"
  },
  "homepage": "https://github.com/acisel-fr/tweets-sample#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "bin": {
    "stream": "./dist/bin/stream.js"
  },
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "scripts": {
    "build": "run-p ts2js ts2min",
    "ts2js": "tsc",
    "ts2min": "rollup --config",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "pack": "npm pack",
    "package": "run-s build pack",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/luxon": "^2.0.7",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "luxon": "^2.1.1"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Administration"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Styles"
      },
      {
        "type": "refactor",
        "section": "Code refactoring"
      },
      {
        "type": "perf",
        "section": "Performance"
      },
      {
        "type": "test",
        "section": "Tests"
      }
    ]
  }
}
